<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>TaxJar Settings</title>
        <title lang="de-DE">TaxJar Einstellungen</title>

        <input-field type="bool">
            <name>active</name>
            <label>Active</label>
            <label lang="de-DE">Aktiviert</label>
            <defaultValue>0</defaultValue>
        </input-field>

        <input-field type="bool">
            <name>debug</name>
            <label>Debug</label>
            <label lang="de-DE">Debug-Modus</label>
            <defaultValue>0</defaultValue>
        </input-field>

        <input-field type="bool">
            <name>sandboxMode</name>
            <label>Sandbox Mode</label>
            <label lang="de-DE">Sandbox-Modus</label>
            <defaultValue>0</defaultValue>
        </input-field>

        <input-field type="text">
            <name>liveApiToken</name>
            <label>Live API Token</label>
            <label lang="de-DE">Live API-Token</label>
            <required>true</required>
        </input-field>

        <input-field type="text">
            <name>sandboxApiToken</name>
            <label>Sandbox API Token</label>
            <label lang="de-DE">Sandbox API-Token</label>
            <required>1</required>
        </input-field>

        <input-field type="text">
            <name>defaultProductTaxCode</name>
            <label>Product Tax Code</label>
            <label lang="de-DE">Standard-Produktsteuer-Code</label>
            <required>true</required>
        </input-field>

        <input-field type="bool">
            <name>useGrossPrice</name>
            <label>Use Product Gross Price For Calculation</label>
            <label lang="de-DE">Bruttopreis für Berechnung verwenden</label>
            <defaultValue>0</defaultValue>
        </input-field>

        <input-field type="bool">
            <name>includeShippingCost</name>
            <label>Include Shipping Cost For Calculation</label>
            <label lang="de-DE">Versandkosten in Berechnung einbeziehen</label>
            <defaultValue>1</defaultValue>
        </input-field>

        <input-field type="single-select">
            <name>selectedCommitFlows</name>
            <options>
                <option>
                    <id>ship</id>
                    <name>Order Shipped</name>
                    <name lang="de-DE">Bestellung versendet</name>
                </option>
                <option>
                    <id>paid</id>
                    <name>Order Paid</name>
                    <name lang="de-DE">Bestellung bezahlt</name>
                </option>
            </options>
            <defaultValue>ship</defaultValue>
            <label>Commit Tax flow *</label>
            <label lang="de-DE">Zeitpunkt der Steuerübermittlung *</label>
            <helpText>
                Choose when to commit tax to TaxJar: either when the order is paid (Order Paid) or when it is shipped (Order Shipped).
            </helpText>
            <helpText lang="de-DE">
                Wählen Sie, wann die Steuer an TaxJar übermittelt wird: entweder wenn die Bestellung bezahlt wurde („Bestellung bezahlt“) oder wenn sie versendet wurde („Bestellung versendet“).
            </helpText>
            <required>true</required>
        </input-field>

        <input-field type="text">
            <name>shippingFromStreet</name>
            <label>Shipping From Street</label>
            <label lang="de-DE">Versandadresse – Straße</label>
            <required>true</required>
        </input-field>

        <input-field type="single-select">
            <name>orderId</name>
            <options>
                <option>
                    <id>orderId</id>
                    <name>Order Id</name>
                    <name lang="de-DE">Bestell-ID</name>
                </option>
                <option>
                    <id>orderNumber</id>
                    <name>Order Number</name>
                    <name lang="de-DE">Bestellnummer</name>
                </option>
            </options>
            <defaultValue>orderId</defaultValue>
            <label>Select transaction id for TaxJar dashboard</label>
            <label lang="de-DE">Transaktions-ID für das TaxJar-Dashboard auswählen</label>
            <required>true</required>
        </input-field>

        <input-field type="single-select">
            <name>shippingFromCountry</name>
            <options>
                <option>
                    <id></id>
                    <name>Select Country</name>
                    <name lang="de-DE">Land auswählen</name>
                </option>
                <option>
                    <id>IE</id>
                    <name>Ireland</name>
                    <name lang="de-DE">Ireland</name>
                </option>
                <option>
                    <id>IT</id>
                    <name>Italy</name>
                    <name lang="de-DE">Italy</name>
                </option>
                <option>
                    <id>LV</id>
                    <name>Latvia</name>
                    <name lang="de-DE">Latvia</name>
                </option>
                <option>
                    <id>LT</id>
                    <name>Lithuania</name>
                    <name lang="de-DE">Lithuania</name>
                </option>
                <option>
                    <id>LU</id>
                    <name>Luxembourg</name>
                    <name lang="de-DE">Luxembourg</name>
                </option>
                <option>
                    <id>MT</id>
                    <name>Malta</name>
                    <name lang="de-DE">Malta</name>
                </option>
                <option>
                    <id>NL</id>
                    <name>Netherlands</name>
                    <name lang="de-DE">Netherlands</name>
                </option>
                <option>
                    <id>PL</id>
                    <name>Poland</name>
                    <name lang="de-DE">Poland</name>
                </option>
                <option>
                    <id>PT</id>
                    <name>Portugal</name>
                    <name lang="de-DE">Portugal</name>
                </option>
                <option>
                    <id>RO</id>
                    <name>Romania</name>
                    <name lang="de-DE">Romania</name>
                </option>
                <option>
                    <id>SK</id>
                    <name>Slovakia</name>
                    <name lang="de-DE">Slovakia</name>
                </option>
                <option>
                    <id>SI</id>
                    <name>Slovenia</name>
                    <name lang="de-DE">Slovenia</name>
                </option>
                <option>
                    <id>ES</id>
                    <name>Spain</name>
                    <name lang="de-DE">Spain</name>
                </option>
                <option>
                    <id>SE</id>
                    <name>Sweden</name>
                    <name lang="de-DE">Sweden</name>
                </option>
                <option>
                    <id>GB</id>
                    <name>United Kingdom</name>
                    <name lang="de-DE">United Kingdom</name>
                </option>
                <option>
                    <id>US</id>
                    <name>United States</name>
                    <name lang="de-DE">United States</name>
                </option>
            </options>
            <defaultValue>US</defaultValue>
            <label>Shipping From Country*</label>
            <label lang="de-DE">Versandland*</label>
            <required>true</required>
        </input-field>

        <input-field type="text">
            <name>shippingFromState</name>
            <label>Shipping From State Code</label>
            <label lang="de-DE">Versand aus Bundesstaat (Code)</label>
            <placeholder>Please provide state short code. Example: WI for Wisconsin</placeholder>
            <placeholder lang="de-DE">Bitte geben Sie den Bundesstaat-Kürzel ein, z. B. WI für Wisconsin</placeholder>
            <required>true</required>
        </input-field>

        <input-field type="text">
            <name>shippingFromCity</name>
            <label>Shipping From City</label>
            <label lang="de-DE">Versand aus Stadt</label>
            <required>true</required>
        </input-field>

        <input-field type="text">
            <name>shippingFromZip</name>
            <label>Shipping From ZipCode</label>
            <label lang="de-DE">Versand-Postleitzahl</label>
            <required>true</required>
        </input-field>
    </card>
    <card>
        <title>Customer Group to exempt</title>
        <component name="sw-entity-multi-id-select">
            <name>exemptCustomerGroup</name>
            <entity>customer_group</entity>
            <helpText>Select a customer group that will be exempt from tax calculations.</helpText>
            <label>Tax exempt customer group</label>
        </component>
    </card>
</config>
