<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/trunk/src/Core/System/SystemConfig/Schema/config.xsd">
    <card>
        <title>Tax Jar Settings</title>
        <title lang="de-DE">#solu1TaxJarJar# Einstellungen</title>
        <input-field type="bool">
            <name>active</name>
            <label>Active</label>
            <label lang="de-DE">Aktiviert</label>
            <defaultValue>0</defaultValue>
        </input-field>
        <input-field type="bool">
            <name>debug</name>
            <label>Debug</label>
            <label lang="de-DE">Debug</label>
            <defaultValue>0</defaultValue>
        </input-field>
        <input-field type="bool">
            <name>sandboxMode</name>
            <label>Sandbox Mode</label>
            <defaultValue>0</defaultValue>
            <label lang="de-DE">Sandbox Mode</label>
        </input-field>
        <input-field type="text">
            <name>liveApiToken</name>
            <label>Live API Token</label>
            <required>true</required>
        </input-field>
        <input-field type="text">
            <name>sandboxApiToken</name>
            <label>Sandbox API Token</label>
            <required>1</required>
        </input-field>
        <input-field type="text">
            <name>defaultProductTaxCode</name>
            <label>Product Tax Code</label>
            <required>true</required>
        </input-field>
        <input-field type="bool">
            <name>useGrossPrice</name>
            <label>Use Product Gross Price For Calculation</label>
            <defaultValue>0</defaultValue>
            <label lang="de-DE">Use Product Gross Price For Calculation</label>
        </input-field>
        <input-field type="bool">
            <name>includeShippingCost</name>
            <label>Include Shipping Cost For Calculation</label>
            <defaultValue>1</defaultValue>
            <label lang="de-DE">Include Shipping Cost For Calculation</label>
        </input-field>
        <title>Enable or Disable Tax Calculation for Gift Cards</title>
        <input-field type="bool">
            <name>giftcardsExemptTax</name>
            <label>Include Gift Cards for Tax Calculation</label>
            <label lang="de-DE">Include Gift Cards for Tax Calculation</label>
            <helpText>
                Enable this option to include gift cards for tax calculation.
                Disable it to exclude gift cards in the total taxable price.
            </helpText>
            <defaultValue>0</defaultValue>
        </input-field>
        <input-field type="single-select">
            <name>selectedCommitFlows</name>
            <options>
                <option>
                    <id>ship</id>
                    <name>Order Shipped</name>
                    <name lang="de-DE">Order Shipped</name>
                </option>
                <option>
                    <id>paid</id>
                    <name>Order paid</name>
                    <name lang="de-DE">Order paid</name>
                </option>
            </options>
            <defaultValue>ship</defaultValue>
            <label>Commit Tax flow *</label>
            <helpText>
                Choose when to commit tax to TaxJar: either when the order is paid (Order Paid) or when it is shipped (Order Shipped).
            </helpText>
            <required>true</required>
        </input-field>
        <input-field type="text">
            <name>shippingFromStreet</name>
            <label>Shipping From Street</label>
            <required>true</required>
        </input-field>
        <input-field type="single-select">
            <name>orderId</name>
            <options>
                <option>
                    <id>orderId</id>
                    <name>Order Id</name>
                    <name lang="de-DE">Order Id</name>
                </option>
                <option>
                    <id>orderNumber</id>
                    <name>Order number</name>
                    <name lang="de-DE">Order number</name>
                </option>
            </options>
            <defaultValue>orderId</defaultValue>
            <label>Select transaction id for tax jar dashboard</label>
            <required>true</required>
        </input-field>
